    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.16.0",
    "react-lazy-load-image-component": "^1.6.3",
    "react-router-dom": "^7.9.2",
    "react-toastify": "^11.0.5",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
