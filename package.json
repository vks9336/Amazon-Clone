{
  "name": "amazon-clone",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "A modern, feature-rich Amazon clone built with React, Vite, and Tailwind CSS. Features include responsive design, dark mode, shopping cart, user authentication, and stunning animations.",
  "keywords": [
    "react",
    "vite",
    "tailwindcss",
    "ecommerce",
    "amazon-clone",
    "shopping-cart",
    "framer-motion",
    "responsive-design",
    "dark-mode",
    "pwa"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/amazon-clone.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/amazon-clone/issues"
  },
  "homepage": "https://yourusername.github.io/amazon-clone",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:clean": "rm -rf node_modules/.vite && npm run dev",
    "dev:troubleshoot": "node scripts/dev-troubleshoot.js",
    "dev:force": "pkill -f vite || true && rm -rf node_modules/.vite && npm run dev",
    "dev:no-hmr": "vite --config vite.config.no-hmr.js",
    "dev:ws-debug": "DEBUG=vite:hmr vite"
  },
